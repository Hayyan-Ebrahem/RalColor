<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="ral_color" type="Magegro\RalColor\Api\Data\RalColorInterface">
            <join reference_table="ral_color" reference_field="product_id" join_on_field="entity_id">
                <field>ral_color_hex</field>
                <field>ral_color_code</field>
            </join>
        </attribute>
    </extension_attributes>
</config>